class GameState {
    public enum NodeType { PLAYER, OPPONENT, CHANCE };
    public enum BettingRound { FLOP, TURN, RIVER };

    public final NodeType nodeType;
    public final BettingRound bettingRound;
    public final int playerBetAmount;
    public final int opponentBetAmount;
    public final Card[] cardsOnTable;
 
    public GameState(NodeType nt, BettingRound br, int pba, int oba, Card[] cot) { 
	this.nodeType = nt;
	this.bettingRound = br;
	this.playerBetAmount = pba;
	this.opponentBetAmount = oba; 
	this.cardsOnTable = cot;
    }
}